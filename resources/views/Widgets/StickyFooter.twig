{% set stickyFooter = widget.settings.stickyFooter.mobile %}

{% set backgroundColor = widget.settings.backgroundColor.mobile %}
{% set visibleFromOffset = widget.settings.visibleFromOffset.mobile %}

{% if visibleFromOffset is not empty %}
    {% if isPreview %}
        <div class="widget-inner">
            <div data-builder-child-container="customContainer">
                {{ children.customContainer | raw }}
            </div>
        </div>
    {% else %}
        <sticky-footer :visible-from-offset="{{ visibleFromOffset|json_encode }}">
            <div data-builder-child-container="first">{{ children.first | raw }}</div>
        </sticky-footer>
    {% endif %}
{% else %}
    <p>Bitte StickyFooter Widget Einstellungen kontrollieren.</p>
{% endif %}
